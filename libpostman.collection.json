{
  "info": {
    "_postman_id": "library-management-2025",
    "name": "Library Management System API",
    "description": "Complete, secure, production-ready backend for a modern library system.\n\nFixed & perfected: Users, Books, Categories, BorrowRecords, Comments\n\nBase URL: http://localhost:3000/api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register New Member",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["users", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Login (Member) → Save Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const res = pm.response.json();",
                  "    if (res.data?.token && pm.collectionVariables.set(\"token\", res.data.token);",
                  "    console.log(\"Token saved:\", res.data?.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Login (Admin) → Save Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const res = pm.response.json();",
                  "    if (res.data?.token) pm.collectionVariables.set(\"token\", res.data.token);",
                  "    console.log(\"Admin token saved\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@library.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories (Public)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/categories"
          },
          "response": []
        },
        {
          "name": "Create Category (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Fantasy\",\n  \"description\": \"Magic, dragons, and epic quests\"\n}"
            },
            "url": "{{baseUrl}}/categories"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books (Public + filters)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/books?title=harry&category_id=1",
              "host": ["{{baseUrl}}"],
              "path": ["books"],
              "query": [
                { "key": "title", "value": "harry" },
                { "key": "category_id", "value": "1" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/books/1"
          },
          "response": []
        },
        {
          "name": "Create Book (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"1984\",\n  \"author\": \"George Orwell\",\n  \"category_id\": 2,\n  \"publication_year\": 1949,\n  \"stock_quantity\": 10\n}"
            },
            "url": "{{baseUrl}}/books"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Borrow Records",
      "item": [
        {
          "name": "Borrow a Book (Member)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"book_id\": 3\n}"
            },
            "url": "{{baseUrl}}/borrow"
          },
          "response": []
        },
        {
          "name": "Return a Book (Member)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/borrow/return/5"
          },
          "response": []
        },
        {
          "name": "My Borrow History",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/borrow/my"
          },
          "response": []
        },
        {
          "name": "All Borrows (Admin only)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/borrow"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Comments",
      "item": [
        {
          "name": "Get Comments by Book",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/comments/book/3"
          },
          "response": []
        },
        {
          "name": "Add Comment (Member)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"book_id\": 3,\n  \"rating\": 5,\n  \"comment\": \"One of the best books I've ever read!\"\n}"
            },
            "url": "{{baseUrl}}/comments"
          },
          "response": []
        },
        {
          "name": "Update My Comment",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 4,\n  \"comment\": \"Good, but a bit long\"\n}"
            },
            "url": "{{baseUrl}}/comments/12"
          },
          "response": []
        },
        {
          "name": "Delete My Comment",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/comments/12"
          },
          "response": []
        }
      ]
    }
  ]
}