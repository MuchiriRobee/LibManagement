{
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "rootDir": "./src",
    // "moduleResolution": "node10",
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking Options */
    "strict": true,
    "skipLibCheck": true 
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
    ]
}
